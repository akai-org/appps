---
import { Image } from "astro:assets";
import defaultIcon from "@assets/default_icon.png";
import { isProd } from "@utilities/env";
import { type Project } from "../utilities/data";
import LanguageTag from "./LanguageTag.astro";
interface Props extends Project {}

const { name, url, languages, stargazerCount } = Astro.props;
const projectUrl = new URL(
  `projects/${name}`,
  isProd ? Astro.site : "http://localhost:4321",
);
const langLimit = 3;
const tooManyLangs = languages.length > langLimit;
---

<div class="flex items-center gap-3 rounded-md border-2 border-gray-100 p-3">
  <Image
    src={defaultIcon}
    width={150}
    height={150}
    alt="icon"
    class="rounded-lg"
  />
  <div
    class="project grid h-4/5 w-5/6 content-between gap-y-1"
    data-langs={languages}
  >
    <h2 id="title" class="break-all text-xl font-bold">{name}</h2>
    <span class="flex items-center gap-1">
      <!--Star Hero Icon-->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="h-5 w-5"
      >
        <path
          fill-rule="evenodd"
          d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
          clip-rule="evenodd"></path>
      </svg>
      {stargazerCount} gwiazdek</span
    >
    <div>
      <ul class="flex flex-row flex-wrap items-center gap-2 text-sm">
        {
          languages
            .slice(0, langLimit)
            .map((language) => <LanguageTag language={language} />)
        }
      </ul>
      <span>{tooManyLangs && `+${languages.length - langLimit} więcej`}</span>
    </div>
    <div class="end">
      <a href={url} class="rounded-md bg-amber-400 p-2 font-semibold text-white"
        >Sprawdź na Githubie</a
      >
      <a
        href={projectUrl}
        class="rounded-md bg-sky-400 p-2 font-semibold text-white">Więcej</a
      >
    </div>
  </div>
</div>

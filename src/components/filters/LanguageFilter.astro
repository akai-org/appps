---
const { languages } = Astro.props;
---

<label class="grid gap-y-1">
  <span class="font-semibold">JÄ™zyki programowania</span>
  <div class="grid grid-cols-3 sm:grid-cols-1">
    {
      [...languages].map((lang) => {
        return (
          <div>
            <input
              type="checkbox"
              name="language"
              value={lang}
              id={`lang-${lang}`}
            />
            <label for={`lang-${lang}`}>{lang}</label>
          </div>
        );
      })
    }
  </div>
</label>

---
import type { Project } from "@utilities/data";
import LanguageTag from "@components/LanguageTag.astro";
interface Props extends Project {}

const { name, description, stargazerCount, languages, url, metadata } =
  Astro.props;
console.log(metadata);
---

<section class="grid w-full grid-cols-[20%_1fr]">
  <aside class="p-3">
    <div class="flex">
      <p>Ilość gwiazdek: {stargazerCount}</p>
      <a href={url} class="text-yellow-500">Sprawdź na githubie</a>
    </div>
    <ul class="grid gap-1">
      {
        languages.map((lang) => {
          return <LanguageTag language={lang} />;
        })
      }
    </ul>
  </aside>
  <main class="p-3">
    <h1 class="text-left text-5xl font-bold">
      {metadata?.name ? metadata.name : name}
    </h1>
    <article>
      {
        metadata?.description
          ? metadata.description
          : description
            ? description
            : "Lorem ipsum"
      }
    </article>
  </main>
</section>

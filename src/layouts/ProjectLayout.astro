---
import type { Project } from "@utilities/data";
import LanguageTag from "@components/LanguageTag.astro";
interface Props extends Project {}

const { name, description, stargazerCount, languages, url, metadata } =
  Astro.props;

const hasTechnologies = (metadata.technologies && metadata.technologies?.length > 0);
---

<section class="flex w-full justify-center">
  <main class="grid w-3/4 p-3">
    <header>
      <section class="flex justify-between">
        <h1 class="text-left text-5xl font-bold">
          {metadata?.name ? metadata.name : name}
        </h1>
        <div class="flex rounded-lg bg-gray-100 p-3">
          <div>{stargazerCount}</div>
          <div>
            <a href={url}>Github</a>
          </div>
        </div>
      </section>
      <section>
      <div>
      <p><strong>JÄ™zyki</strong></p>
        <ul class="flex gap-2">
          {
            languages.map((lang) => {
              return <LanguageTag language={lang} />;
            })
          }
        </ul>
    </div>
    <div>
      <p><strong>Technologie</strong></p>
      <ul class="flex gap-2">
      {
        hasTechnologies ? metadata.technologies?.map(tech => {
          return <li>{tech}</li>;
        }) : ""
      }
      </ul>
    </div>

      </section>
    </header>
    <article>
      {
        metadata?.description
          ? metadata.description
          : description
            ? description
            : "Lorem ipsum"
      }
    </article>
  </main>
</section>
